model company {
  id                  String           @id @default(cuid())
  name                String
  email               String           @unique
  password            String
  description         String?
  logoUrl             String?
  websiteUrl          String?
  rfc                 String?          @unique
  roleId              String
  city                String?
  country             String?
  address             String?
  zipCode             String?
  phone               String?
  fundationDate       DateTime?
  industry            String?
  organizationCulture String?
  size                String?
  isApprove           Boolean          @default(false)
  approvalStatus      String           @default("pending")
  contactName         String?
  contactEmail        String?
  contactPhone        String?
  contactPosition     String?
  companyRole         String?
  fiscalDocumentUrl   String?
  stateId             Int?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  events              Event[]
  surveyResponses     SurveyResponse[]
  vacantes            Vacante[]
  role                role             @relation(fields: [roleId], references: [id], onDelete: NoAction)
  state               State?           @relation(fields: [stateId], references: [id])

  @@index([roleId], map: "company_roleId_fkey")
  @@index([stateId], map: "company_stateId_fkey")
}
