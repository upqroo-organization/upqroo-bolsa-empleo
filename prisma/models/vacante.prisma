model Vacante {
  id                 String        @id @default(cuid())
  title              String
  summary            String        @db.Text
  description        String        @db.Text
  responsibilities   String        @db.Text
  location           String?
  salaryMin          Int?
  salaryMax          Int?
  career             String?
  department         String?
  type               String?
  modality           String?
  numberOfPositions  Int?
  companyId          String
  isMock             Boolean       @default(false)
  stateId            Int?
  applicationProcess String?       @db.Text
  deadline           DateTime?
  originalDeadline   DateTime?
  status             String        @default("active")
  requirements       String?       @db.Text
  benefits           String?       @db.Text
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  applications       Application[]
  company            company       @relation(fields: [companyId], references: [id], onDelete: NoAction)
  state              State?        @relation(fields: [stateId], references: [id])
  aplicants          User[]        @relation("VacanteApplicants")

  @@index([companyId], map: "Vacante_companyId_fkey")
  @@index([stateId], map: "Vacante_stateId_fkey")
}
