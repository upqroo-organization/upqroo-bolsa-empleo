model Vacante {
  id                String        @id @default(cuid())
  title             String
  summary           String        @db.Text
  description       String        @db.Text
  responsibilities  String        @db.Text
  location          String?
  salaryMin         Int?
  salaryMax         Int?
  career            String? // e. g., Ing Software, Lic Terapia fisicia
  department        String? // e.g., Engineering, Marketing, Sales
  type              String? // e.g., Full-time, Part-time, Internship
  modality          String? // e.g., Remote, On-site, Hybrid
  numberOfPositions Int? // Number of positions available
  companyId         String?
  isMock            Boolean       @default(false) // Indicates if the job is a mock job for testing purposes
  stateId           Int?
  state             State?        @relation(fields: [stateId], references: [id])
  company           company?      @relation(fields: [companyId], references: [id])
  aplicants         User[]        @relation("VacanteApplicants")
  applications      Application[]

  // Coordinator-created external vacantes
  isExternal             Boolean @default(false) // Indicates if vacante is for external (non-registered) company
  isImageOnly            Boolean @default(false) // Indicates if vacante is image-only (no detailed fields)
  externalCompanyName    String? // Name of external company (when isExternal = true)
  externalCompanyEmail   String? // Contact email for external company
  externalCompanyPhone   String? // Contact phone for external company
  createdByCoordinatorId String? // ID of coordinator who created this vacante
  createdByCoordinator   User?   @relation("CoordinatorCreatedVacantes", fields: [createdByCoordinatorId], references: [id])

  // Optional: Add fields for application process, deadline, etc.
  applicationProcess String?   @db.Text
  deadline           DateTime?
  originalDeadline   DateTime? // Store original deadline when paused
  status             String    @default("active") // active, paused, expired
  requirements       String?   @db.Text // Job requirements
  benefits           String?   @db.Text // Job benefits
  imageUrl           String? // URL to the job offer image

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
